{
  "name": "whatsontv",
  "version": "1.0.0",
  "description": "A CLI tool to notify about TV show schedules using TVMaze API",
  "main": "src/slack.ts",
  "type": "module",
  "bin": {
    "whatsontv": "./src/cli.ts"
  },
  "scripts": {
    "start": "node --import ./src/register.mjs src/cli.ts",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest --selectProjects unit",
    "test:watch": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest --watch",
    "test:changed": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest --selectProjects unit --bail --findRelatedTests --coverage=false",
    "type-check": "tsc --noEmit",
    "ci": "npm run type-check && npm test && npm run lint",
    "slack": "node --import ./src/register.mjs src/slack.ts",
    "shows": "node --import ./src/register.mjs src/cli.ts",
    "lint": "eslint --config eslint.config.js 'src/**/*.ts'",
    "lint:fix": "eslint --config eslint.config.js 'src/**/*.ts' --fix",
    "prepare": "husky",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "postinstall": "echo 'Note: Using TypeScript v5.8.2, ESLint v9, and TypeScript ESLint v8'"
  },
  "keywords": [
    "tv",
    "shows",
    "slack",
    "cli",
    "tvmaze",
    "notification",
    "schedule"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/szeller/whatsontv.git"
  },
  "dependencies": {
    "@slack/web-api": "^7.9.0",
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "got": "^14.4.6",
    "node-schedule": "^2.1.1",
    "ts-node": "^10.9.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@eslint/js": "^9.0.0",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.13.10",
    "@types/node-schedule": "^2.1.6",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.0.0",
    "eslint-plugin-import": "^2.31.0",
    "glob": "^11.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nock": "^14.0.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.8.2"
  },
  "peerDependencyOverrides": {
    "@typescript-eslint/eslint-plugin": {
      "eslint": "^9.0.0"
    },
    "@typescript-eslint/parser": {
      "eslint": "^9.0.0"
    }
  }
}

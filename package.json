{
  "name": "whatsontv",
  "version": "1.0.0",
  "description": "A CLI tool to notify about TV show schedules using TVMaze API",
  "main": "dist/slack.js",
  "type": "module",
  "bin": {
    "whatsontv": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "tsc -w",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest --selectProjects unit",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "slack": "node dist/slack.js",
    "shows": "node dist/cli.js",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "prepare": "husky install"
  },
  "keywords": [
    "tv",
    "shows",
    "slack",
    "cli",
    "tvmaze",
    "notification",
    "schedule"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/szeller/whatsontv.git"
  },
  "dependencies": {
    "@slack/web-api": "^7.8.0",
    "axios": "^1.7.9",
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "node-schedule": "^2.1.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@eslint/js": "^8.57.0",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.28",
    "@types/node-schedule": "^2.1.6",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "axios-mock-adapter": "^2.1.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "glob": "^10.3.10",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-runner-eslint": "^2.2.1",
    "lint-staged": "^15.2.2",
    "ts-jest": "^29.1.2",
    "typescript": "~4.7.4"
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  }
}

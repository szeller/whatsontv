{
  "name": "whatsontv",
  "version": "1.0.0",
  "description": "A CLI tool to notify about TV show schedules using TVMaze API",
  "main": "src/slack.ts",
  "type": "module",
  "bin": {
    "whatsontv": "./src/cli.ts"
  },
  "scripts": {
    "start": "node --import ./src/register.mjs src/cli.ts",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest --selectProjects unit lint",
    "test:watch": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest --watch",
    "type-check": "tsc --noEmit",
    "ci": "npm run type-check && npm test",
    "slack": "node --import ./src/register.mjs src/slack.ts",
    "shows": "node --import ./src/register.mjs src/cli.ts",
    "lint": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest --selectProjects lint",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "prepare": "[ -n \"$CI\" ] || husky install",
    "build": "tsc",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "tv",
    "shows",
    "slack",
    "cli",
    "tvmaze",
    "notification",
    "schedule"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/szeller/whatsontv.git"
  },
  "dependencies": {
    "@slack/web-api": "^7.8.0",
    "axios": "^1.7.9",
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "node-schedule": "^2.1.1",
    "ts-node": "^10.9.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@eslint/js": "^8.57.0",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.28",
    "@types/node-schedule": "^2.1.6",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "axios-mock-adapter": "^2.1.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "glob": "^10.3.10",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-runner-eslint": "^2.2.1",
    "lint-staged": "^15.2.2",
    "ts-jest": "^29.1.2",
    "typescript": "5.5.2"
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  }
}
